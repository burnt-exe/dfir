<script>
function gradeQuiz() {
    const answers = {
        q1:"A", q2:"B", q3:"T", q4:"C", q5:"A",
        q6:"B", q7:"F", q8:"B", q9:"B", q10:"B",
        q11:"B", q12:"B", q13:"F", q14:"C", q15:"D",
        q16:"B", q17:"A", q18:"A", q19:"B", q20:"T"
    };

    let score = 0;
    for (let q in answers) {
        const userAns = document.querySelector(`[name="${q}"]`).value;
        if (userAns === answers[q]) score++;
    }

    document.getElementById("result").innerHTML =
        `You scored <strong>${score}/20</strong>`;
}
</script>

